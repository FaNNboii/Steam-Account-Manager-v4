<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >
    
    <SolidColorBrush x:Key="defaultForegroundColor" Color="White" />
    <SolidColorBrush x:Key="disabledForegroundColor" Color="LightGray" />
    <SolidColorBrush x:Key="defaultBackgroundColor" Color="WhiteSmoke" />
    <SolidColorBrush x:Key="defaultAccentColor" Color="RoyalBlue" />
    
    
    <Style x:Key="defaultWindow" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource defaultBackgroundColor}" />
        <Setter Property="WindowStyle" Value="SingleBorderWindow" />
    </Style>
    <Style x:Key="defaultGroupBox" TargetType="GroupBox">
        
    </Style>
    <Style x:Key="defaultLabel" TargetType="Label">
        
    </Style>
    <Style x:Key="defaultButton" TargetType="Button">
        
    </Style>
    <Style x:Key="defaultListBox" TargetType="ListBox">
        
    </Style>
    <Style x:Key="defaultInputTextBox" TargetType="TextBox">
        <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent }" />
    </Style>  
</ResourceDictionary>